<!DOCTYPE html>
<html lang="mr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>TestZone CBT Practice</title>
  <style>
    body { font-family: sans-serif; background: #f2f6fa; padding: 30px; }
    #quiz-box { background: white; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); max-width: 600px; margin: auto; }
    .question { font-weight: bold; }
    .options label { display: block; margin: 8px 0; cursor: pointer; }
    .btn { margin-top: 20px; padding: 10px 15px; font-size: 16px; }
    .btn:disabled { background: #ccc; cursor: not-allowed; }
  </style>
</head>
<body>

<div id="quiz-box">
  <div id="question-box"></div>
  <button class="btn" id="nextBtn" disabled>Next</button>
</div>

<script>
  const questions = [
    {
      text: "1. भारताची राजधानी कोणती आहे? / What is the capital of India?",
      options: ["दिल्ली", "मुंबई", "कोलकाता", "चेन्नई"],
      correct: 0
    },
    {
      text: "2. 2 + 2 किती होतात? / What is 2 + 2?",
      options: ["3", "4", "5", "2"],
      correct: 1
    },
    {
      text: "3. पृथ्वीवर किती महाद्वीप आहेत? / How many continents are there?",
      options: ["5", "6", "7", "8"],
      correct: 2
    },
    {
      text: "4. भारताचा पंतप्रधान कोण आहे? / Who is the PM of India?",
      options: ["नरेंद्र मोदी", "राहुल गांधी", "अमित शाह", "मनमोहन सिंग"],
      correct: 0
    },
    {
      text: "5. सूर्य पूर्वेकडून उगवतो का? / Does the sun rise in the east?",
      options: ["होय", "नाही", "कधी कधी", "माहित नाही"],
      correct: 0
    }
  ];

  let currentQuestion = 0;
  let score = 0;

  const questionBox = document.getElementById("question-box");
  const nextBtn = document.getElementById("nextBtn");

  function loadQuestion(index) {
    const q = questions[index];
    let html = `<p class="question">${q.text}</p>`;
    html += '<div class="options">';
    q.options.forEach((opt, i) => {
      html += `<label><input type="radio" name="option" value="${i}"> ${opt}</label>`;
    });
    html += '</div>';
    questionBox.innerHTML = html;
    nextBtn.disabled = true;

    document.querySelectorAll('input[name="option"]').forEach(el => {
      el.addEventListener('change', () => {
        nextBtn.disabled = false;
      });
    });
  }

  nextBtn.addEventListener("click", () => {
    const selected = document.querySelector('input[name="option"]:checked');
    if (selected && parseInt(selected.value) === questions[currentQuestion].correct) {
      score++;
    }
    currentQuestion++;
    if (currentQuestion < questions.length) {
      loadQuestion(currentQuestion);
    } else {
      questionBox.innerHTML = `<h3>✅ परीक्षेचा निकाल:</h3><p>तुमचं स्कोर: <b>${score} / ${questions.length}</b></p>`;
      nextBtn.style.display = "none";
    }
  });

  loadQuestion(currentQuestion);
</script>

</body>
</html>
